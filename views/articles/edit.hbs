<div class="post-article">
    <div class="col-md-8 col-md-offset-2 mediaquerydiv" style="margin: auto;">
        <form action="/articles/{{article._id}}" method="POST" style="border-radius: 2px; padding: 30px;background-color:#EEEEEE; opacity:96%; border-radius:14px;">
            <input type="hidden" name="_method" value="PUT">
            <h1 style="margin-bottom: 30px; font-size: 2.5rem;text-align: center; color:rgb(126, 120, 120); font-family:'Ubuntu'; font-weight:bold;">EDIT YOUR POST</h1>
            <div class="form-group" style="margin-bottom: 20px;">
                <label for="title"><h5>Title</h5></label>
                <input type="text" class="form-control form-control-lg" name="title" id="title" value="{{article.title}}"/>
            </div>

            <div class="form-group" style="margin-bottom: 30px;">
                <label for="status"><h5>Status</h5></label>
                <select name="status" id="status" class="form-control form-control-lg">
                    {{#select article.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
            </div>
            
            <div class="form-group" style="margin-bottom: 20px;">
                <label for="description"><h5>Description</h5></label>
                <textarea rows="5" class="form-control form-control-lg" name="body" id="body">{{article.body}}</textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary">
                <a href="/dashboard" class="btn btn-danger">
                    Cancel
                </a>
            </div>  
        </form>
    </div>	
</div>