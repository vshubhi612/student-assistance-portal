<div class="card" style="background-color: #EEEEEE; margin-bottom:6px; opacity:95%">
  <div class="card-body">
    <div class="card-title">
      <h3 style="color: rgb(78, 78, 78); font-family:'Ubuntu'; font-weight:bold;font-size:2.3rem;">Welcome {{name}} !!</h3>
    </div>
  </div>
</div>
<div class="card" style="padding: 20px 15px 20px 15px; margin-bottom:30px; opacity:95%">
{{#if articles}}
<table class="table table-striped">
  <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each articles}}
          <tr>
              <td><a href="/articles/{{_id}}" style="text-decoration: none; color:rgb(71, 68, 68); font-weight:500; :hover:black">{{title}}</a></td>
              <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
              <td>{{status}}</td>
              <td>
                <a href="/articles/edit/{{_id}}" class="btn btn-success btn-float">
                  <i class="fas fa-edit"></i>
                </a>
                <form action="/articles/{{_id}}" method="POST" id="delete-form">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </td>
          </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
  <h3 style="font-family: Ubuntu; font-weight:bold; text-align:center; color:rgb(78, 78, 78)">You have not created any Entries</h3>
{{/if}}
</div>